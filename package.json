{
  "name": "email-sms-marketing-platform",
  "version": "1.0.0",
  "description": "Production-ready Email & SMS Marketing Platform with AI chatbot and IVR",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:security": "playwright test tests/e2e/security.spec.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:scan": "powershell -ExecutionPolicy Bypass -File scripts/security-scan.ps1",
    "playwright:install": "playwright install",
    "playwright:report": "playwright show-report",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:seed": "node prisma/seed.js",
    "postinstall": "prisma generate",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.7.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tanstack/react-query": "^5.14.2",
    "@vercel/analytics": "^1.1.1",
    "@vercel/blob": "^0.15.1",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "date-fns": "^3.0.6",
    "html-react-parser": "^5.1.1",
    "jose": "^5.2.0",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "openai": "^4.24.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-quill": "^2.0.0",
    "resend": "^3.0.0",
    "stripe": "^14.9.0",
    "twilio": "^4.20.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
